---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import siteLogo from "../images/siteLogo.svg";
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header
  class={`hidden md:block w-full z-40 pt-5 ${currentPath === "" ? "bg-cube-pattern" : null}`}
>
  <div
    class="flex justify-between items-center max-w-screen-xl mx-auto bg-background rounded-full px-7 border border-dashed border-sky-400/40"
  >
    <ul class="flex gap-4 font-medium relative">
      <li
        class={`py-4 pl-4 flex items-center gap-1 ${currentPath === "" ? "opacity-100 text-sky-400" : ""}`}
      >
        <a href="/" class="mt-1">خانه</a>
      </li>
      <li
        class={`py-1 cursor-pointer pl-4 flex items-center gap-1 mega-menu-trigger ${currentPath.includes("services") ? "opacity-100 text-sky-400" : ""}`}
      >
        <span class="mt-1">خدمات</span>
        <Icon name="mdi:arrow-down-drop" size={24} />
        <div
          class="mega-menu absolute z-50 top-[calc(100%-1px)] right-0 w-full p-4 pt-6 border border-dashed border-sky-400/40 border-t-0 bg-background hidden grid-cols-2 gap-10 rounded-b-xl"
        >
          <ul class="text-white">
            <h3 class="text-lg font-medium border-b border-white/20 mb-3 pb-1">
              طراحی و توسعه سایت
            </h3>
            <li class="py-2 flex items-center gap-1 text-sm">
              <a href="/services/web-design-company"> طراحی سایت شرکتی</a>
            </li>
            <li class="py-2 flex items-center gap-1 text-sm">
              <a href="/services/web-design-ecommerce"> طراحی سایت فروشگاهی</a>
            </li>
            <li class="py-2 flex items-center gap-1 text-sm">
              <a href="/services/web-design-laravel">
                برنامه نویسی و توسعه سایت اختصاصی با لاراول</a
              >
            </li>
          </ul>
          <ul class="text-white">
            <h3 class="text-lg font-medium border-b border-white/20 mb-3 pb-1">
              بازاریابی محتوایی
            </h3>
            <li class="py-2 text-sm">
              <a href="/services/instagram">اینستاگرام </a>
            </li>
            <li class="py-2 text-sm">
              <a href="/services/seo">سئو </a>
            </li>
            <li class="py-2 text-sm">
              <a href="/services/ui">طراحی UI </a>
            </li>
          </ul>
        </div>
      </li>
      <li
        class={`py-1 pl-4 flex items-center gap-1 ${currentPath === "portfolios" ? "opacity-100 text-sky-400" : ""}`}
      >
        <a href="/portfolios" class="mt-1">نمونه کارها</a>
      </li>
      <li
        class={`py-1 pl-4 flex items-center gap-1 ${currentPath === "blog" ? "opacity-100 text-sky-400" : ""}`}
      >
        <a href="/blog" class="mt-1">وبلاگ</a>
      </li>
      <li
        class={`py-1 pl-4 flex items-center gap-1 ${currentPath === "contact" ? "opacity-100 text-sky-400" : ""}`}
      >
        <a href="/contact" class="mt-1">تماس با ما </a>
      </li>
    </ul>
    <div class="logo flex gap-2 items-end">
      <h2 class="uppercase font-bold font-[dune-rise] leading-5">
        smart <span class="text-sky-400">it</span>
      </h2>
      <Image
        src={siteLogo}
        alt="smartitgroups logo"
        width={30}
        loading="eager"
      />
    </div>
  </div>
</header>
